<%= form_for @film do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :autofocus => true %>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <%= f.label :release_date, "Release date" %>
  <%= f.text_field :release_date %>
  <%= f.label :Runtime %>
  <%= f.number_field :runtime %>
  <%= f.label :image %>
  <%= f.url_field :image, :required => true %>
  <%= f.label :director_id %>
  <%= f.select :director_id, Director.pluck(:name, :id), :include_blank => true %>
  <%= f.label :Description %>
  <%= f.text_field :plot%>
  <%= f.submit %>
<% end %>
