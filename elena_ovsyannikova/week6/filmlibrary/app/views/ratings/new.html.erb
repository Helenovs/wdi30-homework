
<div class="row">
  <div class="col">
    <%= image_tag @film.image, :class => 'feature'%>
  </div>
  <div class="col">
    <div class="box">
      <h2>Title: <%= @film.title %></h2>
    </div>
    <%= form_tag film_ratings_path  do  %>
    <%# {class: "commentsForm"} %>
         leave a <%= label_tag :Comment %>: <br>
         <%= text_area_tag(:review) %> <br>
         <%= hidden_field_tag :film_id,"#{@film.id}" %>
         <%= hidden_field_tag :user_id,"#{@current_user.id}" %>
         <br>
         <%= submit_tag("Post Comment", {class: "submitComment"})%>
       <% end  %>
  </div>
</div>
