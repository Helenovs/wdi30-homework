

<%= form_tag login_path, :class => "form-signin" do  %>

<h1>Sign In</h1>

<% if flash[:error_message].present? %>
  <p><%= flash[:error_message] %></p>
<% end %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, class: "form-control", placeholder: "example@gmail.com" %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: "form-control", placeholder: "password"%>
  </div>


  <%= submit_tag "Sign in", :class => "btn btn-primary" %>
<% end %>
