<h2><%= @team.name %></h2>
<%= image_tag @team.image if @team.image.present? %>
<p>Name: <%= @team.name %></p>
<p>City: <%= @team.city %></p>
<p>Country: <%= @team.country.name if @team.country_id.present? %></p>
<p>Stadium: <%= @team.stadium %></p>
<p>Title: <%= @team.title %></p>

<div class="controls">
  <%= link_to 'Edit Team', edit_team_path(@team) %>

  <%= link_to 'Delete Team', team_path(@team.id), :method=>"delete" %>
</div>
